        <CheckBoxPreference
            android:key="delay_notification_swap"
            android:summary="@string/delay_notification_summary"
            android:title="@string/delay_notification_removal"
            android:defaultValue="true" />

        <CheckBoxPreference
            android:key="notification_led"
            android:summary="@string/notification_light_summary"
            android:title="@string/notification_light_title"
            android:defaultValue="true" />

        <CheckBoxPreference
            android:key="play_reminder_sound"
            android:summary="@string/play_reminder_sound_summary"
            android:title="@string/play_reminder_sound"
            android:defaultValue="false" />

        <RingtonePreference
            android:key="pref_key_ringtone"
            android:summary="@string/ringtone_selection_summary"
            android:title="@string/ringtone_selection"
            android:ringtoneType="notification" />

        <CheckBoxPreference android:key="vibra_on"
            android:title="@string/vibra_on"
            android:defaultValue="false"/>

    </PreferenceCategory>

