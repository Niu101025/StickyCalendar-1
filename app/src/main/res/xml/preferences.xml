<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory 
        android:title="@string/settings"
        android:key="pref_key_silence">\
        
        <CheckBoxPreference
            android:key="pref_key_enable_discard_button"
            android:summary="@string/show_discard_summary"
            android:title="@string/show_discard_button"
            android:defaultValue="false"  />

        <!-- CheckBoxPreference
