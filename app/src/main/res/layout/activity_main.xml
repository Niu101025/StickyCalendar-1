<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.github.quarck.stickycal.MainActivity" >

    <ToggleButton
        android:id="@+id/toggleButtonEnableService"
        android:onClick="OnBtnEnableServiceClick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="6dp"
        android:layout_marginTop="6dp"
        android:textSize="18sp"
        android:textOff="@string/off"
        android:textOn="@string/on"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true">

    </ToggleButton>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="App icon credit: "
        android:id="@+id/textViewCreditsLbl"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Cornmanthe 3rd"
        android:id="@+id/textViewCredits"
        android:onClick="OnTextViewCreditsClick"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@id/textViewCreditsLbl"
        android:textColor="#1d3bc0"
        android:clickable="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Created with "
        android:id="@+id/textViewKotlinLbl"
        android:onClick="OnTextViewKotlinClick"
        android:layout_above="@id/textViewCreditsLbl"
        android:layout_marginBottom="6dp"
        android:layout_alignParentStart="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Kotlin Language"
        android:id="@+id/textViewKotlin"
        android:layout_above="@id/textViewCreditsLbl"
        android:layout_toEndOf="@id/textViewKotlinLbl"
        android:layout_marginBottom="6dp"
        android:textColor="#1d3bc0"
        android:clickable="true"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/middle_text_description"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/expl_text2"
        android:id="@+id/textView6"
        android:layout_below="@+id/toggleButtonEnableService"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/no_calendar_reminders"
        android:id="@+id/textView7"
        android:layout_below="@+id/textViewWhy"
        />


    <Space
        android:layout_width="20px"
        android:layout_height="20px"
        android:layout_above="@+id/toggleButtonEnableService"
        android:id="@+id/space"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/why_question_mark"
        android:id="@+id/textViewWhy"
        android:onClick="OnTextViewWhyClick"
        android:layout_below="@+id/textView6"
        android:layout_alignParentEnd="true"
        android:textColor="#1d3bc0"
        android:clickable="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/why2_question_mark"
        android:id="@+id/textViewWhy2"
        android:onClick="OnTextViewWhy2Click"
        android:layout_below="@+id/textView7"
        android:layout_alignParentEnd="true"
        android:textColor="#1d3bc0"
        android:clickable="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Test Notificatin"
        android:id="@+id/buttonTest"
        android:onClick="OnButtonTestClick"
        android:layout_below="@+id/textViewWhy2"
        android:layout_alignParentStart="true"
        android:visibility="gone"/>

</RelativeLayout>
