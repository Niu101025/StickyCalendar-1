<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.github.quarck.stickycal.MainActivity" >

	<TextView
	    android:id="@+id/textViewLblEnableSvcd"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
        android:text="@string/notification_service"
	    android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_marginTop="26dp"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/toggleButtonEnableService"/>
    
    <ToggleButton
        android:id="@+id/toggleButtonEnableService"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="6dp"
        android:textSize="18sp"
        android:textOff="@string/off"
        android:textOn="@string/on"
        android:layout_alignBaseline="@+id/textViewLblEnableSvcd"
        android:layout_toEndOf="@+id/textView6">

    </ToggleButton>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="App icon credit: Valentyna Sagan (CC-BY-SA-3.0)"
        android:id="@+id/textView"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/middle_text_description"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/remove_original"
        android:id="@+id/textView6"
        android:layout_below="@+id/textViewLblEnableSvcd"
        android:layout_alignParentStart="true"
        android:layout_marginTop="26dp"
        android:layout_toStartOf="@+id/toggleButtonRemoveOriginal"/>

    <Space
        android:layout_width="20px"
        android:layout_height="20px"
        android:layout_above="@+id/toggleButtonEnableService"
        android:id="@+id/space"/>

    <ToggleButton
        android:id="@+id/toggleButtonRemoveOriginal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="6dp"
        android:textSize="18sp"
        android:textOff="@string/off"
        android:textOn="@string/on"
        android:layout_alignBaseline="@+id/textView6"
        android:layout_alignParentEnd="true"
        />

</RelativeLayout>
